.wrapper
  = render 'toppages/header'
  %section
  .item__details
    %h2.item__details__name
      = @item.name
    .item__details__main-content
      .item__details__main-content__box
        .main_photo
          .photos
            = image_tag "#{@item.images[0].src}", class: "photos"
            - if @item.buyer_id
              .show-soldout
              .show-soldout__text
                SOLD
          .small_photos
            - @images.each do |image|
              = image_tag image.src.to_s, class: "small_photo"  
              -# テーブルの詳細          
        %table.item_detail_table
          %tbody
            %tr
              %th 出品者
              %td
                .seller_name
                  = link_to "", class:"name" do
                    = @user.nickname
                .user_rating
                  .item-user-raitings
                  %i.fas.fa-laugh
                  %span 131
                  .item_user_raitings
                  %i.fas.fa-meh
                  %span 3
                  .item_user_raitings
                  %i.fas.fa-frown
                  %span 1
            %tr
              %th カテゴリー
              %td 
                = link_to  '/' do
                  = @bigcategory.name
                  %br
                = link_to '/' do
                  %i.fas.fa-chevron-right
                  = @category.name
                  %br
                = link_to '/' do
                  %i.fas.fa-chevron-right
                  = @smallcategory.name
            %tr
              %th ブランド
              %td
                = @brand.name

            %tr
              %th 商品の状態
              %td
                = @condition.condition
            %tr
              %th 配送料の負担
              %td
                = @postage.delivery_charge
            %tr
              %th 配送料の方法
              %td
                = @item.postage_id
            %tr
              %th 発送元の地域
              %td
                = @address.name
            %tr
              %th 発送日の目安
              %td
                = @delivery.day
                -# 価格
      .item_price_box
        %span.item_price
          = "¥#{@item.price.to_s(:delimited, delimiter: ',')}"
        %span.item_tax
          (税込)
        %span.item_shipping_fee
          送料込み

      .item-buy-btn
        -if @item.buyer_id != nil
          = link_to ‘売り切れました‘, root_path, class: "item-buy-btn"
        -elsif user_signed_in?
          -if @item.seller_id == current_user.id
            = link_to '編集画面に進む',edit_item_path(@item), class: "item-buy-btn__destroy"
            %span or
            = link_to '削除する', item_path(@item), class:"item-buy-btn__destroy",method: :delete
          - elsif @item.buyer_id == nil
            = link_to '購入画面に進む',item_buyers_path(@item), class: "item-buy-btn"
          - else
            = link_to 'ログインして購入', new_user_session_path, class: "item-buy-btn"
            %span or
            = link_to '新規会員登録して購入', new_user_registration_path, class: "item-buy-btn"
          
  %section
  .message_container
    .message_content
      .message_items
        %form.message-content-form
        .message-user
          .fas.fa-user-cirle
          .message_user-text
          .message_icon
            .message_icon_left
