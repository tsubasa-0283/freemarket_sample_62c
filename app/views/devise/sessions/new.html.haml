.contents
  .signup-header
    %h1
      =link_to image_tag("logo.png"),"#"
    .signup-bar

  .main
    .box
      %h2.box-header
        ログイン
      %h2アカウントをお持ちでない方はこちら
      .signup-btn
        =link_to "新規会員登録",new_user_registration_path
      .box-form
        = form_for '' do |f|
          .box-form__content
            .box-form__content__input
              %label メールアドレス
              = f.email_field :content, class: 'form__input', placeholder: 'PC・携帯どちらでも可'
              .box-form__content__input__message
            .box-form__content__input
              %label パスワード
              = f.password_field :content, class: 'form__input', placeholder: '７文字以上の半角英数字'
              .box-form__content__input__message
          .signup
            = f.submit 'ログイン', class: 'signup__btn'